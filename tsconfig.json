{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true  // Allows TypeScript to process JavaScript files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}